<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_commit_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/textview_commit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="18"
        android:layout_toEndOf="@id/imageview_commit_avatar"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:text="Nikita"/>
    <TextView
        android:id="@+id/textview_commit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textview_commit_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:text="21.50.6666"/>
    <TextView
        android:id="@+id/textview_commit_hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textview_commit_date"
        android:layout_marginStart="16dp"
        android:text="12ad12"/>
</RelativeLayout>